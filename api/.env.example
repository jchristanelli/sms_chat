# Twilio - required if you want real SMS sending
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1##########

# Localtunnel (dev)
LOCALTUNNEL_SUBDOMAIN=sms_chat_123

